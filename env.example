# Redis Configuration
# Copy this file to .env and fill in your actual Redis Cloud credentials
# Never commit .env files to version control!

# Redis Cloud Connection URL
# Format: redis://username:password@host:port
# Example: redis://default:your_password@redis-12345.c1.us-east-1-1.ec2.cloud.redislabs.com:12345
ACTOR_CORE_REDIS_URL=redis://default:your_password@your_host:your_port

# Alternative: Redis with TLS (recommended for production)
# ACTOR_CORE_REDIS_URL=rediss://default:your_password@your_host:your_port

# Cache Configuration
ACTOR_CORE_CACHE_DEFAULT_TTL=1800
ACTOR_CORE_CACHE_MAX_ENTRIES=1000000

# Database Configuration (if needed)
# DATABASE_URL=postgresql://username:password@localhost:5432/chaos_world

# Logging Configuration
RUST_LOG=info,actor_core=debug
