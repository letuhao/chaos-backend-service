# API Gateway Environment Variables
# Copy this file to .env and update the values

# Environment
ENV=development
RUST_LOG=debug
RUST_BACKTRACE=1

# Server Configuration
API_GATEWAY_HOST=127.0.0.1
API_GATEWAY_PORT=8080
API_GATEWAY_WORKERS=2
API_GATEWAY_MAX_CONNECTIONS=1000

# Database Configuration
REDIS_HOST=127.0.0.1
REDIS_PORT=6379
REDIS_DATABASE=0
REDIS_PASSWORD=

# Service Discovery
CONSUL_HOST=127.0.0.1
CONSUL_PORT=8500
CONSUL_DATACENTER=dc1

# Authentication
JWT_SECRET=your-jwt-secret-key-change-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRATION=3600
JWT_REFRESH_EXPIRATION=86400

# OAuth2 Providers
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
DISCORD_CLIENT_ID=
DISCORD_CLIENT_SECRET=
STEAM_CLIENT_ID=
STEAM_CLIENT_SECRET=

# Monitoring
JAEGER_ENDPOINT=http://127.0.0.1:14268/api/traces
PROMETHEUS_PORT=9090
PROMETHEUS_PATH=/metrics

# Security
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REDIS_HOST=127.0.0.1
RATE_LIMIT_REDIS_PORT=6379
RATE_LIMIT_REDIS_DATABASE=0

# Development
HOT_RELOAD=true
DEBUG=true
LOG_REQUESTS=true
LOG_RESPONSES=true
LOG_HEADERS=true
LOG_BODY=true
